<h2>Listing Users</h2>

<table class="table">
  <thead>
  <tr>
      <th>Email</th>
      <th>Options</th>
    </tr>
  </thead>
  <tbody>
<%= for user <- @users do %>
    <tr>
      <td><%= user.email %></td>
      <td class="text-right">
        <span><%= link "Show", to: user_path(@conn, :show, user), class: "act" %></span>
      </td>
      <td>
        <span><%= link "Delete", to: user_path(@conn, :delete, user), method: :delete, class: "act" %></span>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<span><%= link "New User", to: user_path(@conn, :new) %></span>
